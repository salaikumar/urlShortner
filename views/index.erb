<!-- Index page for the url shortner -->
<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title>URL Shortener</title>
</head>
<body>
  <h1>URL Shortener</h1>
  <% if @error %>
    <p><%=@error%></p>
  <% end %>
  <form action="/" method="post">
    <label>Enter a URL: </label>
    <input type="url" name="url" size="40">
    <input type="submit" value="Shorten">
  </form>
</body>
</html>